+                if( psz_cid ) {
+                    cidInput->setText( qfu( psz_cid ) );
+                    free( psz_cid );
+                }
+                else {
+                    cidInput->setText( "" );
+                    cidUpdate->setVisible( true );
+                }
+                free(psz_infohash);
+                free(psz_checksum);
+            }
+            else
+                cidInput->setText( "" );
+        }
+    }
+    else
+        clear();
