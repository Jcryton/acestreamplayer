+		QString extension = fi.suffix();
+		if( extension != "" ) {
+			if( save_format == P2P_SAVE_PLAIN )
+				filter = extension.toUpper()+" files|*."+extension+"|All files|*.*";
+			else if( save_format == P2P_SAVE_ENCRYPTED ) {
